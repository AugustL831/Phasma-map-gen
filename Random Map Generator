import { useState } from "react";

const maps = {
  Small: [
    "Tanglewood Drive",
    "Willow Street House",
    "Edgefield Road House",
    "Ridgeview Court House",
    "Grafton Farmhouse",
    "Bleasdale Farmhouse",
  ],
  Medium: [
    "Brownstone High School",
    "Sunny Meadows Restricted",
  ],
  Large: [
    "Maple Lodge Campsite",
    "Sunny Meadows Mental Institution",
  ],
};

export default function MapRoller() {
  const [size, setSize] = useState("Small");
  const [result, setResult] = useState("");

  const rollMap = () => {
    const selectedMaps = maps[size];
    const randomMap = selectedMaps[Math.floor(Math.random() * selectedMaps.length)];
    setResult(randomMap);
  };

  return (
    <div className="flex flex-col items-center justify-center min-h-screen p-4 bg-gray-900 text-white">
      <h1 className="text-3xl mb-4 font-bold">Phasmophobia Map Roller</h1>

      <select
        value={size}
        onChange={(e) => setSize(e.target.value)}
        className="mb-4 p-2 rounded text-black"
      >
        <option value="Small">Small</option>
        <option value="Medium">Medium</option>
        <option value="Large">Large</option>
      </select>

      <button
        onClick={rollMap}
        className="bg-green-600 px-4 py-2 rounded hover:bg-green-700"
      >
        Roll Map
      </button>

      {result && (
        <div className="mt-6 text-2xl">
          ðŸŽ² Random Map: <strong>{result}</strong>
        </div>
      )}
    </div>
  );
}
